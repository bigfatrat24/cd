%{
#include <stdio.h>

int vowel_count = 0;
int consonant_count = 0;
%}

%%

[aeiouAEIOU]        { vowel_count++; }               // vowels
[a-zA-Z]            { consonant_count++; }           // consonants
.                   { /* ignore everything else */ }

%%

int main()
{
    printf("Enter a string (Ctrl+D to end input):\n");
    yylex();

    printf("Number of vowels: %d\n", vowel_count);
    printf("Number of consonants: %d\n", consonant_count);

    return 0;
}

Compile code:
lex vowel_consonant.l
gcc lex.yy.c -o vowel_consonant -ll
./vowel_consonant
